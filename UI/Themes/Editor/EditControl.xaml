                                    <Border.Padding>
                                        <Thickness>0,4,0,4</Thickness>
                                    </Border.Padding>
                                    <ListBox
                                        x:Name="PART_IntellisenseBox"
                                        ItemContainerStyle="{StaticResource WPFListBoxItemStyle}"
