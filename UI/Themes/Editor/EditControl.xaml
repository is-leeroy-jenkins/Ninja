                            <Popup
                                x:Name="PART_ContextPopup"
                                Width="Auto"
                                Height="Auto"
                                AllowsTransparency="True"
                                Placement="Relative"
                                StaysOpen="False">
                                <local:ContextPromptControl
                                    x:Name="Part_contextPromptControl"
                                    Template="{StaticResource SyncfusionContextPromptControlTemplate}" />
