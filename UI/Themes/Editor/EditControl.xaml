                                            x:Name="PART_CloseButton"
                                            Margin="0,2,2,2"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource SyncfusionEditCloseButtonStyle}"
                                            ToolTip="Close"
                                            ToolTipService.InitialShowDelay="1" />
                                        <ToggleButton
                                            x:Name="PART_PinButton"
                                            Margin="0,2,25,2"
                                            HorizontalAlignment="Right"
                                            IsChecked="True"
                                            Style="{StaticResource SyncfusionPinnedToggleButtonStyle}"
                                            ToolTip="Auto Hide"
                                            ToolTipService.InitialShowDelay="1" />
                                    </Grid>
                                </Border>
                                <ListBox
                                    x:Name="PART_FindAllReferencesList"
                                    Grid.Row="1"
                                    Height="{Binding FindResultsTabHeight, RelativeSource={RelativeSource TemplatedParent}}"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="{StaticResource FluentDark.BorderThickness}"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    SelectedIndex="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource FindResultConverter}}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>

                            <TabControl
                                x:Name="PART_FindAllReferencesTab"
                                Grid.Row="2"
                                MaxHeight="{StaticResource FluentDark.MinHeight}"
                                BorderThickness="{StaticResource FluentDark.BorderThickness}"
                                Cursor="Arrow"
                                FontSize="{x:Static SystemFonts.MenuFontSize}">
                                <TabControl.Visibility>
                                    <MultiBinding Converter="{StaticResource TabVisibilityConverter}">
                                        <Binding
                                            Path="FindResultsTabVisibility"
                                            RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding
                                            ElementName="PART_FindAllReferencesList"
                                            Path="ItemsSource" />
                                        <Binding
                                            Path="IsFindResultsTabClosed"
                                            RelativeSource="{RelativeSource TemplatedParent}" />
                                    </MultiBinding>
                                </TabControl.Visibility>
                                <TabItem
                                    Name="PART_FindAllReferencesTabItem"
                                    Header="{Sync_Resources:EditLocalizationResourceExtension ResourceName=FindSymbolResultText}" />
                            </TabControl>
                            <Border
                                x:Name="TouchStart"
                                Width="30"
                                Height="30"
                                Background="Transparent"
                                Visibility="Collapsed">
                                <Ellipse
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Fill="{TemplateBinding Background}"
                                    Stroke="{TemplateBinding Foreground}"
                                    StrokeThickness="1.5" />
                            </Border>
                            <Border
                                x:Name="TouchEnd"
                                Width="30"
                                Height="30"
                                Background="Transparent"
                                Visibility="Collapsed">
                                <Ellipse
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Fill="{TemplateBinding Background}"
                                    Stroke="{TemplateBinding Foreground}"
                                    StrokeThickness="1.5" />
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="PART_PinButton" Property="IsChecked" Value="false">
                            <Setter TargetName="PART_PinButton" Property="Style" Value="{StaticResource SyncfusionUnPinnedToggleButtonStyle}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        BasedOn="{StaticResource SyncfusionEditControlStyle}"
        TargetType="{x:Type local:EditControl}" />
</ResourceDictionary>
