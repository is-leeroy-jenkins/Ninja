<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ninja" x:Name="InputBox" x:Class="Ninja.MetroTextInput"
             mc:Ignorable="d" Background="#FF141414" Foreground="#FFDEDEDE" Padding="1"
             MinWidth="220" MinHeight="70" MaxWidth="300" MaxHeight="100" Width="245" Height="80"
             BorderBrush="#FF0078D4" BorderThickness="1" HorizontalAlignment="Left">
<Canvas x:Name="Canvas" MinWidth="200" MaxWidth="260" MinHeight="60" MaxHeight="100"
        Background="#FF141414">
<local:MetroLabel x:Name="Label" Content="Name" Canvas.Left="13" Canvas.Top="9"
                  HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="200"
                  MinHeight="20" MaxWidth="260" MaxHeight="30" VerticalContentAlignment="Bottom"
                  Background="#FF141414" BorderBrush="#FF141414" />
<local:MetroTextBox x:Name="TextBox" Canvas.Left="13" TextWrapping="NoWrap" Text="Value"
                    Canvas.Top="38" MinWidth="80" MinHeight="18" MaxWidth="260" MaxHeight="30"
                    Padding="10,1,1,1" />
</Canvas>
</UserControl>